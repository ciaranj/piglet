# Server
PORT=3000
NODE_ENV=development
DATA_PATH=./data

# Database
DB_PATH=./data/piglet.db

# Session
COOKIE_SECRET=change-in-production
SESSION_MAX_AGE=86400000
# COOKIE_SECURE=true  # Set to false for local dev without HTTPS, auto-detected in production
# COOKIE_SAMESITE=lax  # Options: strict, lax, none (default: lax, required for OAuth)
# COOKIE_DOMAIN=.example.com  # Optional: set for subdomain cookie sharing

# Entra ID (admin auth)
ENTRA_TENANT_ID=your-tenant-id
ENTRA_CLIENT_ID=your-client-id
ENTRA_CLIENT_SECRET=your-client-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth (consumer accounts)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user
SMTP_PASS=password
SMTP_FROM=noreply@piglet.example.com

# URLs
# BASE_URL: Full URL where the app is hosted (used for OAuth callbacks, email links, and CORS)
# IMPORTANT: Update this to your actual domain when deploying (e.g., https://piglet.example.com)
BASE_URL=http://localhost:4200

# Upload limits
MAX_UPLOAD_SIZE=209715200

# Static content caching
STATIC_CACHE_MAX_AGE=3600
